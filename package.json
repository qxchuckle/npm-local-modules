{
  "name": "@qcqx/nlm",
  "version": "1.1.1",
  "type": "module",
  "description": "npm local modules - 本地 npm 包联调工具",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "commonjs": "lib/index.cjs",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "bin": {
    "nlm": "lib/cli.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "dev": "rollup -c rollup.config.mjs --watch",
    "start": "node lib/cli.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint --fix ./",
    "prepare": "husky"
  },
  "keywords": [
    "npm",
    "local",
    "modules",
    "development",
    "linking"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qxchuckle/nlm"
  },
  "author": "chuckle",
  "license": "MIT",
  "dependencies": {
    "@npmcli/arborist": "^9.1.9",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "ignore": "^7.0.5",
    "light-date": "^1.2.0",
    "mri": "^1.2.0",
    "npm-packlist": "^10.0.3",
    "ora": "^5.4.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@archoleat/commitlint-define-config": "^1.1.1",
    "@archoleat/prettier-define-config": "^1.2.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/npm-packlist": "^7.0.3",
    "@types/npmcli__arborist": "^6.3.1",
    "@types/semver": "^7.5.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "rollup": "^4.55.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-node-externals": "^8.1.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.53.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
